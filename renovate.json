{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>sublimelsp/renovate-preset"
  ],
  "npm": {
    "enabled": false
  },
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "json",
      "managerFilePatterns": [
        "/^language-server/package.json$/"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "streetsidesoftware/vscode-spell-checker",
      "matchStrings": [
        "{ \"currentValue\": version }"
      ],
      "extractVersionTemplate": "v?(?<version>[\\d\\.]*)$",
      "versioningTemplate": "semver"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-releases"
      ],
      "commitMessagePrefix": "feat"
    }
  ]
}
